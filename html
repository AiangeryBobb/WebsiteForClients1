    <script>
        // Carousel functionality
        const images = document.querySelectorAll('.carousel img');
        const leftArrow = document.querySelector('.carousel-arrow.left');
        const rightArrow = document.querySelector('.carousel-arrow.right');
        let currentIndex = 0;

        function showImage(index) {
            images.forEach((img, i) => {
                img.classList.toggle('active', i === index);
            });
        }

        function nextImage() {
            currentIndex = (currentIndex + 1) % images.length;
            showImage(currentIndex);
        }

        function prevImage() {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            showImage(currentIndex);
        }

        // Auto-rotate every 5 seconds
        let autoRotate = setInterval(nextImage, 5000);

        // Arrow click events
        rightArrow.addEventListener('click', () => {
            clearInterval(autoRotate);
            nextImage();
            autoRotate = setInterval(nextImage, 5000);
        });

        leftArrow.addEventListener('click', () => {
            clearInterval(autoRotate);
            prevImage();
            autoRotate = setInterval(nextImage, 5000);
        });

        // Reservation form submission with EmailJS
        document.getElementById('reservation-form').addEventListener('submit', function(event) {
            event.preventDefault();
            emailjs.sendForm('YOUR_SERVICE_ID', 'YOUR_TEMPLATE_ID', this)
                .then(() => {
                    alert('Reservation submitted! Check your email for confirmation.');
                }, (error) => {
                    alert('Error sending reservation: ' + JSON.stringify(error));
                });
        });
    </script>
